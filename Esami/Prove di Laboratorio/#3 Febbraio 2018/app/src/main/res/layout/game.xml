<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domanda n.: 1/10"
        android:textSize="60px"
        android:textAlignment="center"
        android:layout_marginTop="50px"
        android:id="@+id/textView"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#cccc"
        android:id="@+id/colore"
        android:layout_above="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200px"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore1"
                android:layout_margin="10px"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore2"
                android:layout_margin="10px"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore3"
                android:layout_margin="10px"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore4"
                android:layout_margin="10px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore5"
                android:layout_margin="10px"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore6"
                android:layout_margin="10px"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore7"
                android:layout_margin="10px"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccc"
                android:onClick="clickColore"
                android:id="@+id/colore8"
                android:layout_margin="10px"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>